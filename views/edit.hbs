<h1 class="mb-1 restaurant-show-title">Edit Restaurant Content</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 mx-auto">
      <form
        action="/Restaurant-list/{{restaurant.id}}?_method=PUT"
        method="POST"
      >
        <div class="form-group mb-3">
          <label for="name" class="text-secondary">
            <i class="fas fa-store-alt"></i> Name of the Restaurant
          </label>
          <input
            id="name"
            type="text"
            class="form-control"
            placeholder="Please enter the name of the restaurant"
            name="name"
            value="{{restaurant.name}}"
          />
        </div>

        <div class="form-group mb-3">
          <label for="name_en" class="text-secondary">
            <i class="fas fa-store-alt"></i> Name of the Restaurant (English)
          </label>
          <input
            id="name_en"
            type="text"
            class="form-control"
            placeholder="Please enter the name of the restaurant in English"
            name="name_en"
            value="{{restaurant.name_en}}"
          />
        </div>

        <div class="form-group mb-3">
          <label for="title" class="text-secondary">
            <i class="fas fa-utensils pr-2"></i> Category
          </label>
          <input
            list="titles"
            class="form-control"
            name="category"
            id="title"
            value="{{restaurant.category}}"
          />
          <datalist id="titles">
            <option>美式</option>
            <option>中式料理</option>
            <option>義式料理</option>
            <option>日本料理</option>
            <option>中東料理</option>
            <option>咖啡</option>
            <option>酒吧</option>
          </datalist>
        </div>

        <div class="form-group mb-3">
          <label for="location" class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i> Location
          </label>
          <input
            id="location"
            type="text"
            class="form-control"
            placeholder="Please enter the location of the restaurant"
            name="location"
            value="{{restaurant.location}}"
          />
        </div>

        <div class="form-group mb-3">
          <label for="googleMap" class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i> Google Map
          </label>
          <input
            id="googleMap"
            type="text"
            class="form-control"
            placeholder="Please enter the url of the restaurant in the google map"
            name="google_map"
            value="{{restaurant.google_map}}"
          />
          <a
            href="{{restaurant.google_map}}"
            class="text-secondary"
            target="_blank"
          >
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </div>

        <div class="form-group mb-3">
          <label for="phone" class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i> Phone
          </label>
          <input
            id="phone"
            type="text"
            class="form-control"
            placeholder="Please enter the phone number of the restaurant"
            name="phone"
            value="{{restaurant.phone}}"
          />
        </div>

        <div class="form-group mb-3">
          <label for="rating" class="text-secondary">
            <i class="fa fa-star pr-2"></i> Rating
          </label>
          <input
            id="rating"
            type="number"
            class="form-control"
            placeholder="Please select / enter the rating of the restaurant"
            name="rating"
            value="{{restaurant.rating}}"
            min="1"
            max="5"
            step="0.1"
          />
        </div>

        <div class="form-group mb-3">
          <label for="description" class="text-secondary">
            <i class="fas fa-pencil-alt"></i> Description
          </label>
          <textarea
            id="description"
            rows="5"
            class="form-control"
            placeholder="Please enter the description of the restaurant"
            name="description"
          >{{restaurant.description}}</textarea>
        </div>

        <div class="form-group mb-3">
          <label for="image" class="text-secondary">
            <i class="fas fa-image"></i> Image
          </label>
          <input
            id="image"
            type="url"
            class="form-control"
            placeholder="Please enter the restaurant's image URL"
            name="image"
            value="{{restaurant.image}}"
          />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
      </form>
      <div class="text-center mt-3">
        <a href="/" class="btn btn-outline-info btn-sm" style="margin-bottom:20px; ">Back to My Restaurant List</a>
      </div>
    </div>
  </div>
</div>
